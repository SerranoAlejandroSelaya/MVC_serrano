@model MVC.Controllers.tasks.controller.CardReq.CardReq

<form id="updateForm" asp-action="Update" method="post">
    <div class="form-group">
        <label asp-for="nameTask" class="control-label">Task Name</label>
        <input asp-for="nameTask" class="form-control" value="@ViewBag.CardData.nameTask" />
        <span asp-validation-for="nameTask" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="description" class="control-label">Description</label>
        <input asp-for="description" class="form-control" value="@ViewBag.CardData.description" />
    </div>
    <div class="form-group">
        <label asp-for="status" class="control-label">Status</label>
        <select asp-for="status" asp-items="@Html.GetEnumSelectList<TaskStatus>()" class="form-control">
            <option value="@ViewBag.CardData.status" selected>@ViewBag.CardData.status</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="storyP" class="control-label">Story Points</label>
        <input asp-for="storyP" type="number" min="0" step="1" value="@ViewBag.CardData.storyP" class="form-control" />
    </div>
    <input type="hidden" name="id" value="@ViewBag.CardData.Id" />
    <div class="form-group">
        <input type="submit" value="Update" class="btn btn-primary" />
        <a href="/" class="btn btn-secondary">Cancel</a>
    </div>
</form>
